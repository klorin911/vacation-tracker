@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider

<PageTitle>Vacation Tracker</PageTitle>

<div class="hero">
    <div>
        <div class="chip mb-3">Vacation Tracking Platform</div>
        <h1 class="page-title mb-3" style="font-size: clamp(2.2rem, 4vw, 3.2rem);">Effortless vacation planning for modern teams.</h1>
        <p class="subtle-text mb-4">Coordinate time off with a shared calendar, approvals, and clear visibility into team capacity.</p>
        <AuthorizeView>
            <Authorized>
                <button class="btn btn-primary btn-lg" @onclick='() => NavigationManager.NavigateTo("/dashboard")'>Go to Dashboard</button>
            </Authorized>
            <NotAuthorized>
                <button class="btn btn-primary btn-lg" @onclick='() => NavigationManager.NavigateTo("/login")'>Login to Start</button>
            </NotAuthorized>
        </AuthorizeView>
    </div>
    <div class="hero-card">
        <div class="hero-card__icon">
            <i class="bi bi-calendar-check"></i>
        </div>
        <h4 class="mb-2">Weekly visibility</h4>
        <p class="subtle-text mb-4">Stay ahead with a quick scan of requests, approvals, and upcoming absences.</p>
        <div class="d-flex gap-2 flex-wrap">
            <span class="pill pill-outline">Pending</span>
            <span class="pill pill-outline">Approved</span>
            <span class="pill pill-outline">Capacity</span>
        </div>
    </div>
</div>
