@using VacationTracker.Data.Entities
@using System.Globalization

<div class="calendar-container calendar-shell">
    <div class="calendar-header">
        <div class="calendar-nav">
            <button class="icon-btn" @onclick="PreviousMonth" aria-label="Previous month">&#8249;</button>
            <div class="calendar-title">
                <div class="calendar-title__label">Schedule</div>
                <div class="calendar-title__value">@_currentDate.ToString("MMMM yyyy")</div>
            </div>
            <button class="icon-btn" @onclick="NextMonth" aria-label="Next month">&#8250;</button>
        </div>
        <button class="pill pill-primary" @onclick="GoToToday">Today</button>
    </div>

    <div class="calendar-grid">
        <div class="day-header">Sun</div>
        <div class="day-header">Mon</div>
        <div class="day-header">Tue</div>
        <div class="day-header">Wed</div>
        <div class="day-header">Thu</div>
        <div class="day-header">Fri</div>
        <div class="day-header">Sat</div>

        @foreach (var day in _days)
        {
            <div class="calendar-day @GetDayClass(day)" @onclick="() => OnDayClick(day)">
                <div class="day-top d-flex justify-content-between">
                    <span class="day-number">@day.Day</span>
                    @if (day.Date == DateTime.Today)
                    {
                        <span class="badge bg-primary rounded-pill today-badge" style="font-size: 0.5rem;">Today</span>
                    }
                </div>
                @if (day.Month == _currentDate.Month)
                {
                    <div class="day-content">
                        @foreach (var request in GetRequestsForDay(day))
                        {
                            <div class="request-tag @GetRequestStatusClass(request.Status)" title="@request.User.Name: @request.Type">
                                @request.User.Name
                            </div>
                        }
                    </div>
                }
            </div>
        }
    </div>
    
    <div class="calendar-legend">
        <div class="calendar-legend__item"><div class="legend-box bg-success"></div> Approved</div>
        <div class="calendar-legend__item"><div class="legend-box bg-warning"></div> Pending</div>
        <div class="calendar-legend__item"><div class="legend-box bg-danger"></div> Rejected</div>
    </div>
</div>

@code {
    [Parameter] public List<VacationRequest> Requests { get; set; } = new();
    [Parameter] public EventCallback<DateTime> OnDateSelected { get; set; }

    private DateTime _currentDate = DateTime.Today;
    private List<DateTime> _days = new();

    protected override void OnInitialized()
    {
        GenerateCalendar();
    }

    private void GenerateCalendar()
    {
        _days.Clear();
        var firstDayOfMonth = new DateTime(_currentDate.Year, _currentDate.Month, 1);
        var startDay = firstDayOfMonth.AddDays(-(int)firstDayOfMonth.DayOfWeek);
        
        for (int i = 0; i < 42; i++) // 6 weeks
        {
            _days.Add(startDay.AddDays(i));
        }
    }

    private void PreviousMonth()
    {
        _currentDate = _currentDate.AddMonths(-1);
        GenerateCalendar();
    }

    private void NextMonth()
    {
        _currentDate = _currentDate.AddMonths(1);
        GenerateCalendar();
    }

    private void GoToToday()
    {
        _currentDate = DateTime.Today;
        GenerateCalendar();
    }

    private void OnDayClick(DateTime day)
    {
        if (day.Month == _currentDate.Month)
        {
            OnDateSelected.InvokeAsync(day);
        }
    }

    private IEnumerable<VacationRequest> GetRequestsForDay(DateTime day)
    {
        return Requests.Where(r => day >= r.StartDate.Date && day <= r.EndDate.Date);
    }

    private string GetDayClass(DateTime day)
    {
        var classes = new List<string>();
        if (day.Month != _currentDate.Month) classes.Add("outside-month");
        if (day.Date == DateTime.Today) classes.Add("today-cell");
        return string.Join(" ", classes);
    }

    private string GetRequestStatusClass(Status status)
    {
        return status switch
        {
            Status.Approved => "bg-success",
            Status.Pending => "bg-warning text-dark",
            Status.Rejected => "bg-danger",
            _ => "bg-secondary"
        };
    }
}

