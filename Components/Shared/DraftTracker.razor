@using VacationTracker.Services
@using VacationTracker.Data.Entities
@using Microsoft.AspNetCore.Components.Authorization
@using System.Security.Claims
@inject IDraftService DraftService
@inject IUserService UserService
@inject AuthenticationStateProvider AuthStateProvider
@implements IDisposable

@if (_session != null && _session.IsActive)
{
    <div class="draft-tracker @(_isMyTurn ? "my-turn" : "") @(_session.IsPaused ? "is-paused" : "")">
        <div class="draft-strip">
            <div class="draft-strip__meta">
                <span class="draft-strip__badge @(_session.IsPaused ? "is-paused" : "is-live")">
                    @(_session.IsPaused ? "DRAFT PAUSED" : "DRAFT ACTIVE")
                </span>
                <span class="draft-strip__round">ROUND @_session.CurrentRound</span>
            </div>

            <div class="draft-strip__items">
                @for (int i = 0; i < _upcomingQueue.Count; i++)
                {
                    var dispatcher = _upcomingQueue[i];
                    var isCurrent = i == 0;
                    var isNext = i == 1;
                    var isMe = dispatcher.Id == _loggedInUser?.Id;
                    
                    <div class="draft-strip__item @(isCurrent ? "is-current" : "") @(isMe ? "is-me" : "")">
                        <div class="draft-strip__label">
                            @(isCurrent ? "On the clock" : isNext ? "Up next" : $"Upcoming")
                        </div>
                        <div class="draft-strip__name">@dispatcher.Name</div>
                        <div class="draft-strip__sub">
                            @if (isCurrent)
                            {
                                @if (!_session.IsPaused && _timeLeft.HasValue)
                                {
                                    <span class="draft-strip__timer @(_timeLeft.Value.TotalSeconds < 60 ? "is-urgent" : "")">
                                        @_timeLeft.Value.ToString(@"m\:ss")
                                    </span>
                                }
                                else
                                {
                                    <span class="draft-strip__muted">Timer paused</span>
                                }
                            }
                            else if (isNext)
                            {
                                <span class="draft-strip__muted">On deck</span>
                            }
                            else
                            {
                                <span class="draft-strip__muted">Position @(((_upcomingQueueIndices[i]) % _totalDispatchers) + 1)</span>
                            }
                        </div>
                    </div>
                }
            </div>

            <div class="draft-strip__item is-your-spot">
                <div class="draft-strip__label">Your spot</div>
                <div class="draft-strip__name">@(_loggedInUser?.Name ?? "You")</div>
                <div class="draft-strip__sub">
                    @if (_totalDispatchers > 0 && _myIndex >= 0)
                    {
                        <span class="draft-strip__muted">Position #@(_myIndex + 1) of @_totalDispatchers</span>
                    }
                    @if (!_isMyTurn && _turnsUntilMe > 0)
                    {
                        <span class="draft-strip__muted">@_turnsUntilMe picks away</span>
                    }
                    else if (_isMyTurn)
                    {
                        <span class="draft-strip__pill">Your pick now</span>
                    }
                </div>
            </div>
        </div>
    </div>
}

<style>
