@code {
    private DraftSession? _session;
    private User? _currentUserPicking;
    private User? _nextUser;
    private bool _isMyTurn;
    private int _turnsUntilMe = -1;
    private int _myIndex = -1;
    private int _totalDispatchers;
    private TimeSpan? _timeLeft;
    private System.Threading.Timer? _timer;
    private User? _loggedInUser;
    private int _lastRemainingSeconds = -1;

    protected override async Task OnInitializedAsync()
    {
        DraftService.OnDraftUpdated += HandleDraftUpdated;
        
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var email = authState.User.FindFirst(ClaimTypes.Email)?.Value;
        if (email != null)
        {
            _loggedInUser = await UserService.GetUserByEmailAsync(email);
        }

        await LoadDraftData();
        _timer = new System.Threading.Timer(_ => InvokeAsync(UpdateTimer), null, 0, 1000);
    }

    private void HandleDraftUpdated()
    {
        _ = InvokeAsync(async () =>
        {
            await LoadDraftData();
            StateHasChanged();
        });
    }

    private async Task LoadDraftData()
    {
        _session = await DraftService.GetActiveSessionAsync();
        _currentUserPicking = null;
        _nextUser = null;
        _isMyTurn = false;
        _turnsUntilMe = -1;
        _myIndex = -1;
        _totalDispatchers = 0;
        _lastRemainingSeconds = -1;

        if (_session != null && _session.IsActive)
        {
            var dispatchers = await DraftService.GetDispatcherOrderAsync();
            _totalDispatchers = dispatchers.Count;
            _currentUserPicking = dispatchers.FirstOrDefault(u => u.Id == _session.CurrentUserId);
            
            if (_currentUserPicking != null)
            {
                var currentIndex = dispatchers.FindIndex(u => u.Id == _currentUserPicking.Id);
                _nextUser = dispatchers[(currentIndex + 1) % dispatchers.Count];

                if (_loggedInUser != null)
                {
                    _isMyTurn = _loggedInUser.Id == _currentUserPicking.Id;
                    
                    _myIndex = dispatchers.FindIndex(u => u.Id == _loggedInUser.Id);
                    if (_myIndex != -1)
                    {
                        if (_myIndex > currentIndex)
                        {
                            _turnsUntilMe = _myIndex - currentIndex;
                        }
                        else if (_myIndex < currentIndex)
                        {
                            _turnsUntilMe = (dispatchers.Count - currentIndex) + _myIndex;
                        }
                        else
                        {
                            _turnsUntilMe = 0;
                        }
                    }
                }
            }
        }
    }

    private void UpdateTimer()
    {
        if (_session == null || !_session.IsActive || _session.IsPaused || !_session.TurnStartTime.HasValue)
        {
            return;
        }

        var elapsed = DateTime.UtcNow - _session.TurnStartTime.Value;
        var remaining = TimeSpan.FromMinutes(5) - elapsed;
        var remainingSeconds = (int)Math.Max(0, remaining.TotalSeconds);
        if (remainingSeconds == _lastRemainingSeconds)
        {
            return;
        }

        _lastRemainingSeconds = remainingSeconds;
        _timeLeft = TimeSpan.FromSeconds(remainingSeconds);
        _ = InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        DraftService.OnDraftUpdated -= HandleDraftUpdated;
        _timer?.Dispose();
    }
}
